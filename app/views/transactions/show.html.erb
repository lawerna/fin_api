<div class="row">
  <div class="col mt-3">
    <h1>Show transaction <%= @transaction.id %></h1>
  </div>
  <div class="col-6 mt-3 float-end">
    <%= link_to "Back to transactions", transactions_path, class: "btn btn-primary float-end" %>
  </div>
</div>

<p style="color: green"><%= notice %></p>

<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @transaction.description %></h5>

    <p>Amount: <%= @transaction.amount %></p>
    <p>Date: <%= @transaction.date.strftime('%Y-%m-%d') %></p>

    <%= link_to "Edit", edit_transaction_path(@transaction), class: "btn btn-success" %>
  </div>
</div>
